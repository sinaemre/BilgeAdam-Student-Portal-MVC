@{
    ViewData["Title"] = "Show Student Classroom";
}
@{
    Layout = "~/Views/Shared/LayoutAlternative.cshtml";
}
@model ClassroomStudentDTO

<div class="row">
    <div class="col-md-6 col-sm-12 col-lg-6">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">@Model.ClassroomName</h3>
            </div>
            <div class="card-body">
                <div>
                    Sınıf No: <b>@Model.ClassroomNO</b>
                </div>
                <hr />
                <div>
                    <a class="btn-outline-success" data-bs-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
                        <b>Eğitim İçeriği:</b>
                    </a>
                    <div class="collapse" id="collapseExample">
                        <div class="card card-body">
                            @Model.ClassroomDescription
                        </div>
                    </div>
                    
                </div>
                <hr />
                <div>
                    Eğitmen : <b>@Model.TeacherName</b>
                </div>
            </div>
            <div class="card-footer">
                <a class="btn btn-outline-success d-block" asp-action="StudentExams" asp-route-userName="@User.Identity.Name">Notlar</a>
            </div>
        </div>
    </div>
</div>
