@{
    ViewData["Title"] = "Show Student Classroom";
}
@{
    Layout = "~/Views/Shared/LayoutAlternative.cshtml";
}
@model ClassroomStudentDTO



<div class="row">
    <div class="col-md-3 col-sm-12 col-lg-3">
        <div class="d-flex flex-column  flex-shrink-0 p-3 text-white bg-dark " >
            <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                <svg class="bi me-2" width="40" height="32"><use xlink:href="#bootstrap" /></svg>
                <span class="fs-4">@User.Identity.Name</span>
            </a>
            <hr>
            <ul class="nav nav-pills flex-column mb-auto">
                <li class="nav-item">
                    <a href="#" class="nav-link active" aria-current="page">
                        <svg class="bi me-2" width="16" height="16"><use xlink:href="#home" /></svg>
                        Sınıf Bilgileri
                    </a>
                </li>
                <li>
                    <a href="#" class="nav-link text-white">
                        <svg class="bi me-2" width="16" height="16"><use xlink:href="#speedometer2" /></svg>
                        Notlar
                    </a>
                </li>
                <hr />
               
            </ul>
            <hr>
            <div class="dropdown">
                    <a href="#" class="nav-link text-white">
                        <svg class="bi me-2" width="16" height="16"><use xlink:href="#table" /></svg>
                        Bilgileri Düzenle
                    </a>
             

                    <a href="#" class="nav-link text-white">
                        <svg class="bi me-2" width="16" height="16"><use xlink:href="#grid" /></svg>
                        Çıkış Yap
                    </a>
               
            </div>
        </div>
    </div>
    <div class="col-md-6 col-sm-12 col-lg-6">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">@Model.ClassroomName</h3>
            </div>
            <div class="card-body">
                <div>
                    Sınıf No: <b>@Model.ClassroomNO</b>
                </div>
                <hr />
                <div>
                    <a class="btn-outline-success" data-bs-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
                        <b>Eğitim İçeriği:</b>
                    </a>
                    <div class="collapse" id="collapseExample">
                        <div class="card card-body">
                            @Model.ClassroomDescription
                        </div>
                    </div>
                    
                </div>
                <hr />
                <div>
                    Eğitmen : <b>@Model.TeacherName</b>
                </div>
            </div>
            <div class="card-footer">
                <a class="btn btn-outline-success d-block">Notlar</a>
            </div>
        </div>
    </div>
</div>
