@{
    ViewData["Title"] = "Student Exams";
}
@{
    Layout = "~/Views/Shared/LayoutAlternative.cshtml";
}
@model StudentExamVM

<div class="row">
    <div class="col-md-11">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Not Bilgisi</h3>
            </div>
            <div class="card-body">
                <div class="table table-striped">
                    <table class="table table-bordered table-sm">
                        <thead>
                            <tr>
                                <th>Sınav - 1</th>
                                <th>Sınav - 2</th>
                                <th>Proje Notu</th>
                                <th>Ortalama</th>
                                <th>Proje</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>@Model.Exam1</td>
                                <td>@Model.Exam2</td>
                                <td>@Model.ProjectExam</td>
                                <td>@Model.Average</td>
                                <td><a class="btn btn-success btn-sm" asp-action="DownloadFile" asp-route-filePath="@Model.ProjectPath">İndir</a></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
           
        </div>
    </div>
</div>
