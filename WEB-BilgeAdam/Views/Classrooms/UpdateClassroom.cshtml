@{
    ViewData["Title"] = "Update Classroom";
}
@model UpdateClassroomDTO

<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Sınıf Güncelle</h3>
            </div>
            <form asp-action="UpdateClassroom">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="CreatedDate" />
                <input type="hidden" asp-for="UpdatedDate" />
                <div class="card-body">
                    <div>
                        <label asp-for="ClassroomNo" class="form-label"></label>
                        <input asp-for="ClassroomNo" class="form-control" />
                        <span asp-validation-for="ClassroomNo" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="TeacherId" class="form-label"></label>
                        <select asp-for="TeacherId" class="form-control">
                            <option disabled="disabled" selected="selected">Lütfen bir öğretmen seçiniz...</option>
                            @foreach (var teacher in Model.Teachers)
                            {
                                @if (teacher.Id == Model.TeacherId)
                                {
                                    <option selected="selected" value="@teacher.Id">@teacher.FirstName @teacher.LastName</option>
                                }
                                else
                                {
                                    <option value="@teacher.Id">@teacher.FirstName @teacher.LastName</option>
                                }
                            }
                        </select>
                        <span asp-validation-for="TeacherId" class="text-danger"></span>
                    </div>
                </div>
                <div class="card-footer" style="height:50px;">
                    <button type="submit" class="btn btn-outline-primary float-end">Kaydet</button>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary float-start">Geri Dön</a>
                </div>
            </form>
        </div>
    </div>
</div>